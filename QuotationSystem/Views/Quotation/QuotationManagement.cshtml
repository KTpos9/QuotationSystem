@{
    ViewData["Title"] = "Quotation List";
}
<div class="d-flex flex-column p-5">
    <div>
        <div class="row">
            <div class="col-6">
                <div class="d-flex flex-column" style="gap:1rem">
                    <div class="d-flex align-items-center">
                        <div class="d-flex align-items-center" style="white-space:nowrap">
                            <label class="m-0">Quotation No.:</label>
                            <input class="form-control" type="text" readonly />
                        </div>
                        <div class="d-flex align-items-center">
                            <label class="m-0">Date:</label>
                            <input class="form-control" type="date" readonly />
                        </div>
                    </div>

                    <div class="row align-items-center">
                        <label class="m-0 col-2">Customer:</label>
                        <input class="col form-control" type="text" />
                    </div>

                    <div class="row align-items-center">
                        <label class="m-0 col-2">Customer Address:</label>
                        <textarea class="col form-control"></textarea>
                    </div>

                    <div class="row align-items-center">
                        <label class="m-0 col-2">Customer Contact:</label>
                        <input class="col form-control" type="text" />
                    </div>

                    <div class="row align-items-center">
                        <label class="m-0 col-2">Tax Id:</label>
                        <input class="col form-control" type="text" />
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="d-flex flex-column" style="gap:1rem">
                    <div class="row align-items-center text-nowrap">
                        <label class="m-0 col-2">Sales Name:</label>
                        <input class="col form-control" type="text" />
                    </div>

                    <div>
                        <label class="m-0">Vat:</label>
                        <input class="form-control" type="text" disabled placeholder="7%" />
                    </div>

                    <div>
                        <label class="m-0">Active:</label>
                        <input class="form-check" type="checkbox" checked/>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex flex-column">
        <h5>Item List</h5>
        <table class="table" id="itemListTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Item Code</th>
                    <th scope="col">Item Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Qty</th>
                    <th scope="col">Unit</th>
                    <th scope="col">Unit Price</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Total</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                </tr>

                <tr>
                    <td>2</td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                    <td><input class="form-control" type="text" /></td>
                </tr>

            </tbody>
        </table>
    </div>
</div>