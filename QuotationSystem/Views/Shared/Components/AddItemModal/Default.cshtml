@model QuotationSystem.Models.Item.ItemViewModel
@{
}
<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <form class="modal-content" enctype="multipart/form-data" asp-controller="Item" asp-action="FileUpload" method="post">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Upload Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-column mb-3" style="gap:.5rem">
                    <div class="row align-items-center">
                        <div class="col-3">
                            <div>Upload Item:</div>
                        </div>
                        <div class="col">
                            <div>
                                <input type="file" class="custom-file-input" name="file" accept=".xls, .xlsx" id="fileImport" required>
                                <label class="custom-file-label mx-3" for="fileImport">Choose file...</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" value="Upload file" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>