<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuotationSystem</title>
    <link rel="stylesheet" href="~/QuotationSystem.styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true"/>
    <link href="~/css/inspinia.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="wrapper" class="">
        <vc:left-navigation></vc:left-navigation>
        <div id="page-wrapper" class="gray-bg @ViewBag.SpecialClass">
            <vc:top-navigation></vc:top-navigation>
            @RenderBody()
        </div>
    </div>

    <script src="~/js/jquery-bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/inspinia.min.js" asp-append-version="true"></script>
    <script src="~/js/plugin-bundle.min.js" asp-append-version="true"></script> @*loading bar*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
