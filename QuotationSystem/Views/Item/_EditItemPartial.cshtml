@model QuotationSystem.Models.Item.ItemViewModel
@{
}
<div class="modal fade" id="editItemModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <form class="modal-content" asp-controller="Item" asp-action="EditItem" method="post">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLongTitle">Edit Item</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-column mb-3" style="gap:.5rem">
                    <div class="row">
                        <div class="col-3">
                            <div>Item Code:</div>
                        </div>
                        <div class="col">
                            <input class="form-control" type="text" asp-for="Item.ItemCode" value="@Model.Item.ItemCode" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div>Item Name:</div>
                        </div>
                        <div class="col">
                            <input class="form-control" type="text" asp-for="Item.ItemName" required maxlength="30"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div>Description:</div>
                        </div>
                        <div class="col">
                            <textarea class="form-control" asp-for="Item.ItemDesc" maxlength="30"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div>Unit Price:</div>
                        </div>
                        <div class="col">
                            <input class="form-control" type="number" asp-for="Item.UnitPrice" required/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div>Unit:</div>
                        </div>
                        <div class="col">
                            <select class="custom-select" asp-for="Item.Unit" asp-items="Model.UnitLists" required>
                                <option selected value="">-Select-</option>
                            </select>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div>Remark:</div>
                        </div>
                        <div class="col">
                            <textarea class="form-control" asp-for="Item.Remark" maxlength="150"></textarea>
                        </div>
                    </div>
                    @{
                        var isActive = Model.Item.ActiveStatus == "Y" ? true : false;
                        Model.Item.ActiveStatus = null;//set null to avoid error from asp-for expecting boolean but Item.ActiveStatus is string
                    }
                    <div class="row">
                        <div class="col-3">
                            <div>Active:</div>
                        </div>
                        <div class="col">
                            <input class="form-check-label" type="checkbox" value="Y" checked="@isActive" asp-for="Item.ActiveStatus"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>