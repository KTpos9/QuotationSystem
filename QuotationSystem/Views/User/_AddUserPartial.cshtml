@model QuotationSystem.Models.User.UserModalViewModel
@{
}
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <form class="modal-content" asp-controller="User" asp-action="AddUser" method="post">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">User Management</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-column" style="gap:.5rem">
                    <div class="row">
                        <div class="col-3">
                            <div>User ID:</div>
                        </div>
                        <div class="col">
                            <input class="form-control" type="text" asp-for="UserId"/>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div>Name:</div>
                        </div>
                        <div class="col">
                            <input class="form-control" type="text" asp-for="Username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div>Department:</div>
                        </div>
                        <div class="col">
                            <select asp-for="Department" asp-items="ViewBag.DepartmentIds" class="form-control">
                                <option value="">-Select-</option>
                            </select>
                            <span asp-validation-for="Department" class="text-danger"></span>
                            @*<input class="form-control" type="text" asp-for="User.DepartmentId"/>*@
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            <div>Active:</div>
                        </div>
                        <div class="col">
                            <input class="form-check-label" type="checkbox" value="Y" checked asp-for="ActiveStatus" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div>Permission Menu:</div>
                        </div>
                        <div class="col">
                            <div class="d-flex flex-column" style="gap:.5rem">
                                <div class="form-check">
                                    <input class="form-check-input" id="UserManagement" type="checkbox" value="USS010" name="permissions" />
                                    <label class="form-check-label" for="UserManagement">User Management</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="ITS010" name="permissions" />
                                    <label class="form-check-label" for="ItemManagement">Item Management</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="QTS020" name="permissions" />
                                    <label class="form-check-label" for="QuotationManagement">Quotation Management</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}